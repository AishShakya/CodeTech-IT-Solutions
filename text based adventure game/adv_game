import time

def chapter_one():
    print("You find yourself in the heart of an ancient and mysterious forest.")
    print("The dense foliage surrounds you, and an eerie mist hangs in the air.")
    print("As you stand at the crossroads, you must make decisions that will shape your destiny. Choose wisely.")
    time.sleep(1)

    print("\nChapter 1: The Crossroads")
    print("1. Path of the Whispering Shadows")
    print("2. Trail of Enchanted Stones")
    print("3. Mysterious Grove")

    choice_chapter1 = input("Choose your path (1/2/3): ")

    if choice_chapter1 == "1":
        chapter_path_of_shadows()
    elif choice_chapter1 == "2":
        chapter_enchanted_stones()
    elif choice_chapter1 == "3":
        chapter_mysterious_grove()
    else:
        print("Invalid choice. Please select a valid option.")

def chapter_path_of_shadows():
    print("You venture into the Path of the Whispering Shadows.")
    time.sleep(1)

    print("\nChapter 2: The Path of the Whispering Shadows")
    print("The path is dark, and you can hear mysterious whispers in the shadows.")
    print("1. Continue through the Shadows")
    print("2. Take the Hidden Passage")

    choice_chapter2 = input("What is your next move (1/2): ")

    if choice_chapter2 == "1":
        print("You press on through the shadows.")
        
    elif choice_chapter2 == "2":
        print("You decide to take the Hidden Passage.")
        
    else:
        print("Invalid choice. Please select a valid option.")

def chapter_enchanted_stones():
    print("You follow the Trail of Enchanted Stones.")
    time.sleep(1)

    print("\nChapter 3: The Trail of Enchanted Stones")
    print("The trail is adorned with mystical stones emitting a soft glow.")
    print("Suddenly, you hear a distant howl.")
    print("1. Follow the Stones Deeper into the Forest")
    print("2. Hide and Observe the Surroundings")

    choice_chapter3 = input("What is your next move (1/2): ")

    if choice_chapter3 == "1":
        print("You follow the stones deeper into the forest.")
        
    elif choice_chapter3 == "2":
        print("You decide to hide and observe your surroundings.")
        
    else:
        print("Invalid choice. Please select a valid option.")

def chapter_mysterious_grove():
    print("You enter the Mysterious Grove.")
    time.sleep(1)

    print("\nChapter 4: The Mysterious Grove")
    print("The grove is filled with magical flora, and a shimmering pool lies ahead.")
    print("A figure appears from the shadows.")
    print("1. Approach the Figure")
    print("2. Circle Around the Pool Stealthily")

    choice_chapter4 = input("What is your next move (1/2): ")

    if choice_chapter4 == "1":
        print("You approach the mysterious figure.")
        
    elif choice_chapter4 == "2":
        print("You decide to circle around the pool stealthily.")
        
    else:
        print("Invalid choice. Please select a valid option.")

# Start the game
chapter_one()